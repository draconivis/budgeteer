<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Budgeteer{% endblock %}</title>
        <link rel="icon" href="{{asset('images/favicon.svg')}}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="{{url('app_home_index')}}">Home</a></li>
                <li><a href="{{url('app_budget_index')}}">Budget manager</a></li>
                {% if app.user %}
                <li><a href="{{url('app_logout')}}">LOGOUT</a></li>
                {% else %}
                <li><a href="{{url('app_login')}}">LOGIN</a></li>
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
        <footer>
    </body>
</html>
